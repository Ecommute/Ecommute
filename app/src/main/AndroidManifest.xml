<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ecommute">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:windowSoftInputMode="adjustPan"
        android:gravity="bottom"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ecommute">

        <activity
            android:name=".RutasActivity"
            android:exported="true" />
        <activity
            android:name=".EditUserActivity"
            android:exported="true" />

        <activity
            android:name=".EditActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"></activity>

        <activity android:name=".SignUpActivity"></activity>
        <activity android:name=".PopUpCoche"
            android:theme ="@style/PopUpCoche" >
        </activity>
        <activity android:name=".PopUpInfopuntos" android:theme ="@style/PopUpCoche"></activity>
        <activity android:name=".PopUpArticulo"></activity>
        <activity android:name=".CalendarActivity"></activity>
        <activity android:name=".PopUpEventos"></activity>
        <activity
            android:name=".PopUpAnadirEvento"
            android:theme="@style/PopUpCoche" />
        <activity android:name=".EditProfilePicActivity" />
    </application>

</manifest>