<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bicycling"
        android:layout_width="376dp"
        android:layout_height="59dp"
        android:text="Bicycling"
        android:backgroundTint="@color/light_green"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driving" />

    <Button
        android:id="@+id/walking"
        android:layout_width="376dp"
        android:layout_height="59dp"
        android:text="Walking"
        android:backgroundTint="@color/light_green"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googlemap_webView" />

    <Button
        android:id="@+id/driving"
        android:layout_width="376dp"
        android:layout_height="59dp"
        android:text="Driving"
        android:backgroundTint="@color/light_green"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walking" />

    <Button
        android:id="@+id/transit"
        android:layout_width="376dp"
        android:layout_height="59dp"
        android:text="Transit"
        android:backgroundTint="@color/light_green"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bicycling"
        app:layout_constraintVertical_bias="0.0" />

    <WebView
        android:id="@+id/googlemap_webView"
        android:layout_width="409dp"
        android:layout_height="300dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Guardar Ruta"
        android:backgroundTint="@color/main_green"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transit" />

</androidx.constraintlayout.widget.ConstraintLayout>