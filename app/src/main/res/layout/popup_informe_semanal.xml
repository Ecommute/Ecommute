<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/cambiardatos"
        android:layout_width="130dp"
        android:layout_height="53dp"
        android:layout_marginStart="20dp"
        android:text="CO2"
        app:layout_constraintBottom_toTopOf="@+id/cerrar_popup"
        app:layout_constraintStart_toStartOf="@+id/graph"
        app:layout_constraintTop_toBottomOf="@+id/graph"
        app:layout_constraintVertical_bias="0.633" />

    <Button
        android:id="@+id/cerrar_popup"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="#D80A0A"
        android:foregroundTint="#EC0D0D"
        android:text="Cerrar informe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/graph"
        android:layout_width="322dp"
        android:layout_height="365dp"
        app:layout_constraintBottom_toTopOf="@+id/cerrar_popup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505">

    </com.github.mikephil.charting.charts.BarChart>

    <Button
        android:id="@+id/cambiartiempo"
        android:layout_width="130dp"
        android:layout_height="53dp"
        android:layout_marginEnd="20dp"
        android:text="Último mes"
        app:layout_constraintBottom_toTopOf="@+id/cerrar_popup"
        app:layout_constraintEnd_toEndOf="@+id/graph"
        app:layout_constraintTop_toBottomOf="@+id/graph"
        app:layout_constraintVertical_bias="0.633" />

    <TextView
        android:id="@+id/resumengrafico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/cerrar_popup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graph"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:text="Mis gráficos"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cerrar_popup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137" />

</androidx.constraintlayout.widget.ConstraintLayout>