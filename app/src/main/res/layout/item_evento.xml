<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:backgroundTint="#FF9800"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:foregroundTint="#00EDEDED">

    <TextView
        android:id="@+id/NombreEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NombreEvento"
        android:textColor="?android:attr/textColorHint"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_button"
        app:layout_constraintEnd_toEndOf="@+id/item_button"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="@+id/item_button"
        app:layout_constraintTop_toTopOf="@+id/item_button"
        app:layout_constraintVertical_bias="0.349" />

    <Button
        android:id="@+id/item_button"
        android:layout_width="380dp"
        android:layout_height="105dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#DADADA"
        android:clickable="true"
        android:translationZ="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/Localitzacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LocalizacionEvento"
        android:textColor="?android:attr/textColorHint"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_button"
        app:layout_constraintEnd_toEndOf="@+id/item_button"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="@+id/item_button"
        app:layout_constraintTop_toTopOf="@+id/item_button"
        app:layout_constraintVertical_bias="0.674" />


</androidx.constraintlayout.widget.ConstraintLayout>